{% extends 'baseBO.html.twig' %}

{% block title %}Excursionreservation index{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="card-title">Excursion réservation</h4>
                                </div>
                                <div class="col-md-6 text-right">
                                    <a class="btn btn-outline-info btn-icon-text"
                                       href="{{ path('excursionreservation_new') }}"><i
                                                class="mdi mdi-plus-circle-outline"></i></a>
                                </div>
                            </div>

                            <div class="table-responsive pt-3">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Libelle</th>
                                        <th>Catégorie</th>
                                        <th>Prix</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for excursionreservation in excursionreservations %}
                                        <tr>
                                            <td>{{ excursionreservation.id }}</td>
                                            <td>{{ excursionreservation.prix }}</td>
                                            <td>{{ excursionreservation.status }}</td>
                                            <td>{{ excursionreservation.createdAt ? excursionreservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="{{ path('excursionreservation_show', {'id': excursionreservation.id}) }}"
                                                       class="btn btn-outline-info btn-icon-text">
                                                        <i class="mdi mdi-magnify-plus"></i>
                                                    </a>
                                                    <a href="{{ path('excursionreservation_edit', {'id': excursionreservation.id}) }}"
                                                       class="btn btn-outline-info btn-icon-text">
                                                        <i class="mdi mdi-lead-pencil"></i>
                                                    </a>
                                                    {{ include('excursionreservation/_delete_form.html.twig') }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
