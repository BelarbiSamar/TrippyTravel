{% extends 'baseBO.html.twig' %}

{% block title %}BO Excursion{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="card-title">Excursion</h4>
                                </div>
                                <div class="col-md-6 text-right">
                                        <a class="btn btn-outline-info btn-icon-text" href="{{ path('excursion_new') }}"><i
                                                    class="mdi mdi-plus-circle-outline"></i></a>
                                </div>
                            </div>

                            <div class="table-responsive pt-3">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Libelle</th>
                                        <th>Cat√©gorie</th>
                                        <th>Prix</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for excursion in excursions %}
                                        <tr>
                                            <td>{{ excursion.id }}</td>
                                            <td>{{ excursion.libelle }}</td>
                                            <td>{{ excursion.excursioncategorie.libelle }}</td>

                                            <td>{{ excursion.prix }}</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="{{ path('excursion_show', {'id': excursion.id}) }}"
                                                       class="btn btn-outline-info btn-icon-text">
                                                        <i class="mdi mdi-magnify-plus"></i>
                                                    </a>
                                                    <a href="{{ path('excursion_edit', {'id': excursion.id}) }}"
                                                       class="btn btn-outline-info btn-icon-text">
                                                        <i class="mdi mdi-lead-pencil"></i>
                                                    </a>
                                                    {{ include('excursion/_delete_form.html.twig') }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}