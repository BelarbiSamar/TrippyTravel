{% extends 'base.html.twig' %}

{% block title %}Excursion index{% endblock %}

{% block body %}
    <h1>Excursion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Programme</th>
                <th>Ville</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for excursion in excursions %}
            <tr>
                <td>{{ excursion.id }}</td>
                <td>{{ excursion.libelle }}</td>
                <td>{{ excursion.description }}</td>
                <td>{{ excursion.programme }}</td>
                <td>{{ excursion.ville }}</td>
                <td>{{ excursion.prix }}</td>
                <td>
                    <a href="{{ path('excursion_show', {'id': excursion.id}) }}">show</a>
                    <a href="{{ path('excursion_edit', {'id': excursion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('excursion_new') }}">Create new</a>
{% endblock %}
