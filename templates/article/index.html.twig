{% extends 'baseBO.html.twig' %}

{% block title %}Articles list{% endblock %}

{% block body %}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-14 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <span class="card-title">Articles</span>
                        <a href="{{ path('article_new') }}" class="btn btn-success">Add</a>
                        <div class="table-responsive">
                            <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <!--<th>Content</th>
                                    <th>Image</th>-->
                                    <th>CreatedAt</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for article in articles %}
                                <tr>
                                    <td>{{ article.id }}</td>
                                    <td>{{ article.title }}</td>
                                    <td>{{ article.getIdCategory() }}</td>
                                    <!--<td>{{ article.content }}</td>
                                    <td>{{ article.image }}</td>-->
                                    <td>{{ article.CreatedAt ? article.CreatedAt|date('Y-m-d') : '' }}</td>
                                    <td>
                                        <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-dark">show</a>
                                        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary">edit</a>
                                    </td>
                                    <td>
                                        {{ include('article/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">no articles found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
