{% extends 'base.html.twig' %}

{% block title %}MaisonReservation index{% endblock %}

{% block body %}
    <h1>MaisonReservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>Statut</th>
                <th>Createdat</th>
                <th>Start</th>
                <th>End</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for maison_reservation in maison_reservations %}
            <tr>
                <td>{{ maison_reservation.id }}</td>
                <td>{{ maison_reservation.prix }}</td>
                <td>{{ maison_reservation.statut }}</td>
                <td>{{ maison_reservation.createdat ? maison_reservation.createdat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ maison_reservation.start ? maison_reservation.start|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ maison_reservation.end ? maison_reservation.end|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('maison_reservation_show', {'id': maison_reservation.id}) }}">show</a>
                    <a href="{{ path('maison_reservation_edit', {'id': maison_reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('maison_reservation_new') }}">Create new</a>
{% endblock %}
