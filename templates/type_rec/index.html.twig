{% extends 'baseBO.html.twig' %}

{% block title %}TypeRec index{% endblock %}

{% block body %}
<div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="card-title">Types Reclamations</h4>
                                </div>
                                <div class="col-md-6 text-right" align="right">
                                        <a class="btn btn-secondary" href="{{ path('type_rec_new') }}"><i
                                                    class="mdi mdi-plus"></i></a>
                                </div>
                                 <p class="card-description">Liste types reclamations</p>
                            </div>

                            <div class="table-responsive pt-3">
                                 <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Libelle</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for type_rec in type_recs %}
                                        <tr>
                                            <td>{{ type_rec.id }}</td>
                                            <td>{{ type_rec.libelle }}</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="{{ path('type_rec_show', {'id': type_rec.id}) }}" 
                                                    class="btn btn-secondary">
                                                    <i class="mdi mdi-eye"></i></a>
                                                    <a href="{{ path('type_rec_edit', {'id': type_rec.id}) }}"
                                                    class="btn btn-secondary">
                                                    <i class="mdi mdi-pencil"></i>
                                                    </a>
                                                    {{ include('type_rec/_delete_form.html.twig') }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    

{% endblock %}
