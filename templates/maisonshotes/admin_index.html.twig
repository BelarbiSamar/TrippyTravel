                                            // }
                                            //
                                            // else {
                                            //     entitySelector.append('<li style="color:red;">'+value+'</li>');
                                            // }
                                            if (id !== 'error') {
                                                console.log(value[1]);
                                                var tr = '<tr><td>' + value[0] + '</td><td>' + value[1] + '</td><td>' + value[2] + '</td><td>' + value[3] + '</td>><td>' + value[4] + '</td>'
                                                tr += '<td></td>'
                                                tr += "</tr>"
                                                entitySelector.append(tr);
                                            } else {
                                                entitySelector.append('<tr><td>' + value + '</td></tr>');
                                            }

                                        });
                                    });
                                }
                            }
                        });
                    }
                });
            });
        </script>

