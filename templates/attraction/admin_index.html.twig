{% extends 'baseBO.html.twig' %}

{% block title %}Attraction dashboard{% endblock %}

{% block body %}
    <h1>Attraction dashboard index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Localisation</th>
                <th>Horraire</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for a in attractions %}
            <tr>
                <td>{{ a.id }}</td>
                <td>{{ a.libelle }}</td>
                <td>{{ a.localisation }}</td>
                <td>{{ a.horraire }}</td>
                <td>{{ a.prix }}</td>
                <td>
                    <a href="{{ path('attraction_show', {'id': a.id}) }}">show</a>
                    <a href="{{ path('attraction_edit', {'id': a.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('attraction_new') }}">Create new</a>
{% endblock %}