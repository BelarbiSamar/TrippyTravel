                            <div class="text">
                                <strong class="number" data-number="40000">0</strong>
                                <span>Excursions</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18 text-center">
                            <div class="text">
                                <strong class="number" data-number="87000">0</strong>
                                <span>Hotels</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18 text-center">
                            <div class="text">
                                <strong class="number" data-number="56400">0</strong>
                                <span>Maison d'hotes</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


    <section class="ftco-section ftco-destination">
        <div class="container">
            <div class="row justify-content-start mb-5 pb-3">
                <div class="col-md-7 heading-section ftco-animate">
                    <span class="subheading">Maison d'hote</span>
                    <h2 class="mb-4"><strong>Maison d'hote </strong>populaire</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="destination-slider owl-carousel ftco-animate">
                        {% for maison in maisons %}
                            <div class="item">
                                <div class="destination">

                                    {% for f in maison.maisonhotesimages %}
                                    {% if loop.index == 1 %}
                                    <a href="{{ path('maisonshotes_show_front', {'id': maison.id}) }}"
                                       class="img img-2 d-flex justify-content-center align-items-center"
                                       style="background-image: url({{ vich_uploader_asset(f, 'imageFile') }});">
                                        {% endif %}
                                        {% endfor %}
                                        <div class="icon d-flex justify-content-center align-items-center">
                                            <span class="icon-search2"></span>
                                        </div>
                                    </a>
                                    <div class="text p-3">
                                        <h3><a href="#">{{ maison.libelle }}</a></h3>
                                        <span class="listing">{{ maison.nbrChambres }} chambres</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
